#blog
  .container
    .section_header
      %h3 News
      / <input type="text" class="input-large search-query" placeholder="Search">
    - counter = 0  
    - for item in @news  
      = raw("<div class=\"row post_row\">") if counter == 0      
      .span4.post
        =image_tag random_horizontal_images(1).first
        .text
          %h5= link_to item.title, item.url
          %span.date= item.created_at.strftime("%d %b. %Y")
          %p= raw(item.post[0..150]) + "..."
        .author_box
          %h6= item.author.name
          %p= item.author.position
        = link_to raw("<span>&#43;</span>"), item.url, :class => "plus_wrapper"
      = raw("</div>") if counter == 2    
      - counter == 2 ? counter = 0 : counter += 1


    .pagination
      = will_paginate @news
      / = will_paginate(@news, :renderer => WillPaginate::ActionView::LinkRenderer)
      