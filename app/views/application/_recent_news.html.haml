.span4.recent_posts
  %h3.footer_header Recent News
  - for item in @news
    .post
      =link_to image_tag(random_rounded_small_images(1).first, :class => "img-circle"), item.url
      .date= item.created_at.strftime("%d %b. %Y")
      = link_to item.title, item.url, :class => "title"
      = raw("<em>by #{item.author.name}</em>")
