.navbar.transparent.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">
      <strong>VATEUD.NET</strong>
      </a>
      .nav-collapse.collapse
        %ul.nav.pull-right
          %li= link_to "HOME", root_url
          %li= link_to "NEWS", :controller => "news"
          - for page in @pages
            - if page.children.visible.in_menu.count > 0
              %li.dropdown
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                = page.name.upcase
                <b class="caret"></b>
                </a>
                %ul.dropdown-menu
                  - for child in page.children.visible.in_menu
                    %li= link_to child.name.upcase, child.url 
            - elsif page.slug == "home"
              - next  
            - else      
              %li=link_to page.name.upcase, page.url
             