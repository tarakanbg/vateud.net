%div{:class => @page && @page.slug == "home" ? "navbar transparent navbar-inverse navbar-fixed-top" : "navbar navbar-inverse navbar-static-top"}
  .navbar-inner
    .container
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </a>
      = link_to image_tag("eud_logo_small.png"), "/", :class => "brand"
      / <a class="brand" href="/">
      / <strong>VATEUD.NET</strong>
      / </a>
      .nav-collapse.collapse
        %ul.nav.pull-right
          %li= link_to "HOME", root_url
          %li= link_to "NEWS", :controller => "news"
          %li= link_to "EVENTS", :controller => "events"
          - for page in @pages
            - if page.children.visible.in_menu.count > 0
              %li.dropdown
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                = page.name.upcase
                <b class="caret"></b>
                </a>
                %ul.dropdown-menu
                  - for child in page.children.visible.in_menu
                    %li= link_to child.name.upcase, child.url 
            - elsif page.slug == "home"
              - next  
            - else      
              %li=link_to page.name.upcase, page.url
          %li= link_to "FORUMS", "http://forum.vateud.net/", :target => "_blank"
             