.span4.recent_posts
  %h3.footer_header Latest tasks
  - for item in @tasks
    .post
      =link_to image_tag(random_rounded_small_images(1).first, :class => "img-circle"), item.entry_id, :target => "_blank"
      .date= item.published.strftime("%d %b. %Y")
      = link_to "#{item.title[0..33]}...", item.entry_id, :class => "title", :target => "_blank"
      = raw("<em>by #{item.author}</em>")
    